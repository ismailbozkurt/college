<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:stretchColumns="1"
    android:layout_height="wrap_content" android:layout_width="wrap_content" android:paddingLeft="30dip" android:paddingRight="30dip">
	 <TableRow>
		<TextView
            android:text="                    "
            android:layout_marginTop="30dip" />
    </TableRow>
    
    <TableRow>
    	<ImageButton 	android:id="@+id/previousButton" 
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:background="@drawable/previous"
						android:clickable="true"
						android:layout_marginBottom="3dip"
						android:layout_marginRight="1dip"
						android:layout_marginTop="1dip" android:layout_gravity="left" android:layout_marginLeft="5dip"/>
						
    	<ImageButton 	android:id="@+id/playButton" 
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:background="@drawable/play"
						android:adjustViewBounds="true"
						android:clickable="true"
						android:layout_marginBottom="3dip"
						android:layout_marginLeft="1dip"
						android:layout_marginRight="1dip"
						android:layout_marginTop="1dip" android:layout_gravity="center"/>
						
		<ImageButton 	android:id="@+id/nextButton" 
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:background="@drawable/next"
						android:clickable="true"
						android:layout_marginBottom="3dip"
						android:layout_marginTop="1dip" android:layout_marginRight="5dip" android:layout_marginLeft="1dip"/>
    </TableRow>

</TableLayout>
